{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn app start",
    "build": "yarn app build",
    "dev": "yarn app dev",
    "app": "yarn workspace app run",
    "lint": "eslint api/ packages/"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@josefaidt/eslint-config": "^0.1.14",
    "@josefaidt/prettier-config": "^0.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "eslint": "^6.8.0",
    "prettier": "^1.19.1"
  },
  "eslintIgnore": [
    "packages/app/public",
    "**/node_modules"
  ],
  "eslintConfig": {
    "extends": "@josefaidt/eslint-config"
  },
  "prettier": "@josefaidt/prettier-config",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "hotfix",
          "refactor",
          "style",
          "release"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,mdx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "faunadb": "^2.13.0"
  }
}
